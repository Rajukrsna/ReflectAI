        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <script>
        document.getElementById('addHabitForm').addEventListener('submit', async function (e) {
            e.preventDefault();
        
            const habitName = document.getElementById('habitName').value;
            const priority = document.getElementById('priority').value;
            const description = document.getElementById('description').value;
        
            try {
                const response = await fetch('/add-habit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ habitName, priority, description })
                });
        
                if (response.ok) {
                    // Add new row to the table dynamically
                    const newRow = `<tr>
                                        <td><span>${habitName}</span></td>
                                        <td>${priority}</td>
                                        <td>${description}</td>
                                        <td>0</td>
                                        <td><button class="btn btn-danger btn-sm complete-habit">Complete</button></td>
                                    </tr>`;
                    document.querySelector('tbody').insertAdjacentHTML('beforeend', newRow);
                    document.getElementById('addHabitForm').reset();
                    new bootstrap.Modal(document.getElementById('addHabitModal')).hide();
                } else {
                    alert("Failed to add habit.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred.");
            }
        });
        
        // Strike off completed habit
        document.querySelector('tbody').addEventListener('click', function (e) {
            if (e.target.classList.contains('complete-habit')) {
                e.target.closest('tr').querySelector('span').classList.toggle('completed');
            }
        });
        </script>
        <style>
        .completed {
            text-decoration: line-through;
            color: gray;
        }
        </style>
        
