                <main>
                    <div class="container mt-5">
                        <h2 class="text-center">Track Your Habit</h2>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col">Habit Name</th>
                                                <th scope="col">Priority</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Days Followed</th>
                                                <th scope="col">Complete for Today</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% habits.forEach(habit => { %>
                                                <tr>
                                                    <td>
                                                        <span class="<%= habit.daysFollowed > 0 ? 'text-decoration-line-through' : '' %>"><%= habit.name %></span>
                                                    </td>
                                                    <td><%= habit.priority %></td>
                                                    <td><%= habit.description %></td>
                                                    <td><%= habit.daysFollowed %></td>
                                                    <td>
                                                        <!-- Complete button -->
                                                        <form action="/complete-habit" method="POST" style="display:inline;">
                                                            <input type="hidden" name="habitId" value="<%= habit._id %>">
                                                            <button class="btn btn-success btn-sm" type="submit">Complete</button>
                                                        </form>
                                                        
                                                        <!-- Delete button -->
                                                        <form action="/delete-habit" method="POST" style="display:inline;">
                                                            <input type="hidden" name="habitId" value="<%= habit._id %>">
                                                            <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                        
                                        
                                    </table>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#addHabitModal">Add New Habit</button>
                                </div>
                            </div>
                        </div>



                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <h4>Health Improvement</h4>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" aria-valuenow="<%= healthImprovement %>" aria-valuemin="0" aria-valuemax="100">
                                        <%= healthImprovement %>%
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
